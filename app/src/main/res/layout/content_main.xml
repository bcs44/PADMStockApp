<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/left"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="@android:dimen/thumbnail_width"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/ignored"
        android:src="@drawable/money"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@android:dimen/thumbnail_width" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@android:dimen/thumbnail_width"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/ignored"
        android:src="@drawable/box"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@android:dimen/thumbnail_width"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/textViewBox"
        android:layout_width="179dp"
        android:layout_height="154dp"
        android:layout_alignTop="@+id/textViewMoney"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/textViewMoney"
        android:layout_width="179dp"
        android:layout_height="154dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="196dp"
        android:layout_marginRight="196dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

</RelativeLayout>